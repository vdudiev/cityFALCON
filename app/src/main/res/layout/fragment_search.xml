<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SearchFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_Search"
            android:layout_margin="20dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_with_shadow"
            android:padding="11dp">

            <Button
                android:id="@+id/button_search_search_fragment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFA"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:hint="@string/companies_or_symbols"
                android:textColorHint="@color/colorSecondary"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorSecondary"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/linearLayout_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="0dp">

                <Button
                    android:id="@+id/button_all__scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/outline_background_selected_search_fragment"
                    android:textColor="@color/colorWhite"
                    android:text="@string/string_all"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/button_eu_stocks_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_eu_stocks"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_us_stocks_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_us_stocks"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_indices_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_indices"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_forex_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_forex"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_cryptos_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_cryptos"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_etf_s_scroll_search_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10sp"
                    android:background="@drawable/outline_background_search_fragment"
                    android:textColor="@color/colorBlack"
                    android:text="@string/string_etf_s"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

            </LinearLayout>

        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorSecondary"
                android:text="@string/symbol_date"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorSecondary"
                android:text="@string/sell_price"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorSecondary"
                android:text="Current price"
                android:layout_gravity="end"/>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_signals_on_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp" />


    </LinearLayout>
</FrameLayout>