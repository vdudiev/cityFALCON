<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchlistFragment"
    android:background="@color/colorWhite">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_Watchlist"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/filter"
                android:layout_gravity="end" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_number_of_short_terms_watchlist_fragment"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:gravity="center"
            android:text="Find ??? short-term Sell&amp;Buy trading signals for your investment plan."/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="3dp"
            android:background="@drawable/background_with_shadow_for_selector_signals_fragment">

            <LinearLayout
                android:id="@+id/LinearLayout_sell_watchlist_fragment"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/borser_for_sell_or_buy"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sell_picture"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_sell"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_buy_watchlist_fragment"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/buy_picture"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_buy"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>